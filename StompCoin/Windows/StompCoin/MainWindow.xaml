<Window x:Class="StompCoin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StompCoin"
        mc:Ignorable="d"
        Title="StompCoin" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Navigation -->
        <Border Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
            <DockPanel>
                <!-- Logo -->
                <StackPanel DockPanel.Dock="Top" Margin="20">
                    <Image Source="/Resources/Images/logo.png" Height="40"/>
                    <TextBlock Text="StompCoin" 
                             FontSize="24" 
                             FontWeight="Bold" 
                             Margin="0,10,0,0"/>
                </StackPanel>

                <!-- Navigation Menu -->
                <StackPanel Margin="10">
                    <Button x:Name="HomeButton" 
                            Style="{StaticResource NavButtonStyle}"
                            Click="HomeButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Icons/home.png" Width="24" Height="24"/>
                            <TextBlock Text="Startseite" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="MusicButton" 
                            Style="{StaticResource NavButtonStyle}"
                            Click="MusicButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Icons/music.png" Width="24" Height="24"/>
                            <TextBlock Text="Musik" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="LeaderboardButton" 
                            Style="{StaticResource NavButtonStyle}"
                            Click="LeaderboardButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Icons/leaderboard.png" Width="24" Height="24"/>
                            <TextBlock Text="Rangliste" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="SettingsButton" 
                            Style="{StaticResource NavButtonStyle}"
                            Click="SettingsButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Icons/settings.png" Width="24" Height="24"/>
                            <TextBlock Text="Einstellungen" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- User Profile -->
                <StackPanel DockPanel.Dock="Bottom" Margin="10">
                    <Button x:Name="ProfileButton" 
                            Style="{StaticResource NavButtonStyle}"
                            Click="ProfileButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Icons/profile.png" Width="24" Height="24"/>
                            <TextBlock Text="Profil" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="WalletButton" 
                            Style="{StaticResource NavButtonStyle}"
                            Click="WalletButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Icons/wallet.png" Width="24" Height="24"/>
                            <TextBlock Text="Wallet" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="LogoutButton" 
                            Style="{StaticResource NavButtonStyle}"
                            Click="LogoutButton_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Icons/logout.png" Width="24" Height="24"/>
                            <TextBlock Text="Abmelden" Margin="10,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window> 