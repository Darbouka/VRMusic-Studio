<Page x:Class="StompCoin.Views.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StompCoin.Views"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="HomePage">

    <ScrollViewer>
        <StackPanel Margin="20">
            <!-- Statistik-Karten -->
            <WrapPanel>
                <!-- Level -->
                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <Image Source="/Resources/Icons/level.png" Width="32" Height="32"/>
                        <TextBlock Text="Level" 
                                 FontSize="16" 
                                 Foreground="Gray" 
                                 Margin="0,8,0,4"/>
                        <TextBlock x:Name="LevelValue" 
                                 Text="42" 
                                 FontSize="24" 
                                 FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Wallet -->
                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <Image Source="/Resources/Icons/wallet.png" Width="32" Height="32"/>
                        <TextBlock Text="Wallet" 
                                 FontSize="16" 
                                 Foreground="Gray" 
                                 Margin="0,8,0,4"/>
                        <TextBlock x:Name="WalletValue" 
                                 Text="1,234 STOMP" 
                                 FontSize="24" 
                                 FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- XP -->
                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <Image Source="/Resources/Icons/xp.png" Width="32" Height="32"/>
                        <TextBlock Text="XP" 
                                 FontSize="16" 
                                 Foreground="Gray" 
                                 Margin="0,8,0,4"/>
                        <TextBlock x:Name="XpValue" 
                                 Text="12,345" 
                                 FontSize="24" 
                                 FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </WrapPanel>

            <!-- Fitness-Karte -->
            <Border Style="{StaticResource CardStyle}" Margin="0,20,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Fitness" 
                             FontSize="20" 
                             FontWeight="Bold"/>

                    <WrapPanel Grid.Row="1" Margin="0,16,0,0">
                        <!-- Schritte -->
                        <StackPanel Width="200" Margin="0,0,32,0">
                            <Image Source="/Resources/Icons/steps.png" Width="32" Height="32"/>
                            <TextBlock Text="Schritte" 
                                     FontSize="16" 
                                     Foreground="Gray" 
                                     Margin="0,8,0,4"/>
                            <TextBlock x:Name="StepsValue" 
                                     Text="8,547" 
                                     FontSize="24" 
                                     FontWeight="Bold"/>
                        </StackPanel>

                        <!-- Kalorien -->
                        <StackPanel Width="200" Margin="0,0,32,0">
                            <Image Source="/Resources/Icons/calories.png" Width="32" Height="32"/>
                            <TextBlock Text="Kalorien" 
                                     FontSize="16" 
                                     Foreground="Gray" 
                                     Margin="0,8,0,4"/>
                            <TextBlock x:Name="CaloriesValue" 
                                     Text="423" 
                                     FontSize="24" 
                                     FontWeight="Bold"/>
                        </StackPanel>

                        <!-- Distanz -->
                        <StackPanel Width="200">
                            <Image Source="/Resources/Icons/distance.png" Width="32" Height="32"/>
                            <TextBlock Text="Distanz" 
                                     FontSize="16" 
                                     Foreground="Gray" 
                                     Margin="0,8,0,4"/>
                            <TextBlock x:Name="DistanceValue" 
                                     Text="6.2 km" 
                                     FontSize="24" 
                                     FontWeight="Bold"/>
                        </StackPanel>
                    </WrapPanel>
                </Grid>
            </Border>

            <!-- Aktuelle Aktivität -->
            <TextBlock Text="Aktuelle Aktivität" 
                     FontSize="20" 
                     FontWeight="Bold" 
                     Margin="0,20,0,16"/>

            <ItemsControl x:Name="ActivityList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource CardStyle}" 
                                Width="300" 
                                Height="200" 
                                Margin="0,0,16,16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="{Binding Name}" 
                                         FontSize="18" 
                                         FontWeight="Bold"/>

                                <TextBlock Grid.Row="1" 
                                         Text="{Binding Description}" 
                                         TextWrapping="Wrap" 
                                         Margin="0,8"/>

                                <StackPanel Grid.Row="2" 
                                          Orientation="Horizontal">
                                    <TextBlock Text="Belohnung: " 
                                             Foreground="Gray"/>
                                    <TextBlock Text="{Binding Reward}" 
                                             FontWeight="Bold"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </ScrollViewer>
</Page> 