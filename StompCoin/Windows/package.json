{
  "name": "stomp-coin",
  "version": "1.0.0",
  "description": "Stomp Coin Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start\" \"cd src && npm start\"",
    "build": "cd src && npm run build",
    "package": "electron-builder"
  },
  "author": "Stomp Coin Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.0.1",
    "electron": "^25.0.0",
    "electron-builder": "^24.4.0"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.2",
    "@mui/material": "^5.13.0",
    "@mui/icons-material": "^5.11.16",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0"
  },
  "build": {
    "appId": "com.stompcoin.app",
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    }
  }
} 